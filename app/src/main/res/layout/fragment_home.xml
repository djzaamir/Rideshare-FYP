<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_fragment_map_framelayout"
    tools:context="com.andromeda.djzaamir.rideshare.HomeFragment">

    <!--For Map-->
  <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen_map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <Button
        android:layout_weight="1"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find a Driver "
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:id="@+id/findADriver"
        />

       <Button
           android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share My Ride"
        android:padding="10dp"
        android:textSize="20sp"
        android:layout_gravity="bottom"
        android:id="@+id/shareMyRide"
        />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/map_loading_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_gravity="center"
        />

</FrameLayout>
