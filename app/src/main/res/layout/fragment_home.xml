<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment_map_framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andromeda.djzaamir.rideshare.HomeFragment">

    <!--For Map-->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_screen_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/findADriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="#4883e2"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:text="Find a Driver "
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/shareMyRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:background="#4883e2"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:text="Share My Ride"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/map_loading_progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>
