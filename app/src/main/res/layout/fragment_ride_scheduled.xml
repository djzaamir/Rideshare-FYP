<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andromeda.djzaamir.rideshare.RideScheduledFragment">


    <!--Main container layout-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <!--Greetings Message-->
        <TextView
            android:id="@+id/grettings_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:textSize="20sp" />

        <!--Driver or customer name-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/name_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:hint="Name">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <!--Vehicle No-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Vehicle No">

            <EditText
                android:id="@+id/vehicle_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <!--Vehicle Colour-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Vehicle Color">

            <EditText
                android:id="@+id/vehicle_colour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>


        <!--Ride Details and Chat button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ride_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:background="#4883e2"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="20dp"
                android:text="Ride Details"
                android:textColor="#fff" />


        </LinearLayout>

        <!--Ride Finish Button-->
        <Button
            android:id="@+id/ride_finish_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="#f00"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="20dp"
            android:textSize="15sp"
            android:text="Finish Ride"
            android:textColor="#fff" />

    </LinearLayout>

</FrameLayout>
