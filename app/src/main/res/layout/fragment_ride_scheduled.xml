<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andromeda.djzaamir.rideshare.RideScheduledFragment">


    <!--Main container layout-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <!--Greetings Message-->
        <TextView
            android:id="@+id/grettings_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Aamir, your Ride has been Scheduled"
            android:textAlignment="center"
            android:textSize="20sp" />

        <!--Driver or customer name-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:hint="Driver Name">

            <EditText
                android:id="@+id/vehicle_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shehriyaar"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <!--Vehicle No-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Vehicle No">

            <EditText
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fgt-567"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>

        <!--Vehicle Colour-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Vehicle No">

            <EditText
                android:id="@+id/colour_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RED"
                android:textSize="20sp" />

        </android.support.design.widget.TextInputLayout>


        <!--Ride Details and Chat button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ride_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:padding="20dp"
                android:text="Ride Details" />

            <Button
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:padding="20dp"
                android:text="Chat" />

        </LinearLayout>

        <!--Ride Finish Button-->
        <Button
            android:id="@+id/ride_finish_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:layout_marginHorizontal="30dp"
            android:text="Finish Ride" />

    </LinearLayout>

</FrameLayout>
