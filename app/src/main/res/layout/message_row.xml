<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"                                  android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:padding="8dp"
    >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

               <!--Driver Image-->
                <ImageView
                    android:id="@+id/chat_msg_image"
                    android:layout_width="80dp"
                    android:maxWidth="80dp"
                    android:minWidth="80dp"
                    android:layout_height="80dp"
                    android:maxHeight="80dp"
                    android:minHeight="80dp"
                    android:src="@drawable/ic_launcher_background" />

                <!--Linaer layout for text data-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:orientation="vertical"
                    android:padding="3dp">


                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         >

                        <!--Driver Name-->
                        <TextView
                        android:id="@+id/driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_gravity="start"
                        android:layout_weight="70"
                         />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/date_of_msg"
                            android:textSize="12sp"
                            android:textColor="#000"
                            android:layout_gravity="end"
                            android:gravity="end"
                            />

                     </LinearLayout>



                    <!--Last Chat Message-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxHeight="40dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/last_chat_msg"
                        />

                    <!--Hidden unique-chat-key-->
                    <TextView
                        android:id="@+id/hidden_id_field_unique_chat_msg"
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:visibility="gone"/>

                    <!--Other Person User key-->
                    <TextView
                        android:id="@+id/hidden_id_field_other_user_id"
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:visibility="gone"/>

                </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


</LinearLayout>