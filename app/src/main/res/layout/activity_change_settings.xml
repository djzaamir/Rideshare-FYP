<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.andromeda.djzaamir.rideshare.ChangeSettingsActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content_header_msg"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update your Name"
                android:textColor="#000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/content_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Please use your real `Full Name` , Using a fake name may result in account termination"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/content_editextbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Enter your Full Name"
                android:maxLines="2" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/content_submit_button"
                style="android:attr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#10ba87"
                android:onClick="on_submit_data"
                android:text="Update"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/update_data_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>